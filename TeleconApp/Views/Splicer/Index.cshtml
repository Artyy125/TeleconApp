@model TeleconApp.Models.SplicerModel
<style>
    .wrapper {
        position: relative;
        left: 10%; /*move the object to the center of the parent object*/
        top: 50%;
        /*these 5 settings change the base (or registration) point of the wrapper object to it's own center - so we align child center with parent center*/
    }
</style>
<div class="panel panel-body">
    <div class="row">
        <div class="panel panel-body col-md-3">
            @Html.Partial("/Views/Partials/_LeftMenu.cshtml")
        </div>
        <div class="col-md-9">
            <form class="form-horizontal" action="/Splicer/Save">
                @Html.Partial("/Views/Partials/_BasicInfo.cshtml", Model)
                @Html.Partial("/Views/Partials/_JobDone.cshtml", Model)
                <label>Preparation</label>
                <div class="panel panel-group panel-info">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label col-sm-5" for="EnclosureName">Prepped Enclosure:</label>
                                <div class="col-sm-7">
                                    <select name="EnclosureName" class="dropdown form-control" id="EnclosureName">
                                        <option></option>
                                        @foreach (var item in Model.Enclosures)
                            {
                                <option value="@item.Id">@item.Name</option>
                }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label col-sm-5" for="time">ARB/MH:</label>
                                <div class="col-sm-7">
                                    <input type="text" maxlength="7" class="form-control" id="ARB" placeholder="ARB/MH" name="ARB">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 col-xs-5">
                            <div class="form-group">
                                <label class="control-label" for="time">Enter Cable Id Done (eg, AO,BA, D2)  then  select relevant item:</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-11 col-xs-11">
                            <div class="form-group wrapper">
                                <table id="SplicerTable" class="table-responsive" style="text-align:center">
                                    <tr>
                                        <th>No</th>
                                        <th>Cable Id</th>
                                        <th>No of Fibres</th>
                                        <th>Prepped</th>
                                        <th>De-Rebonized</th>
                                        <th>Spliced Ribbon</th>
                                        <th>Spliced Single</th>
                                        <th>Missing</th>
                                    </tr>
                                    @for (int i = 0; i < 7; i++)
                        {
                            <tr>
                                <td width="30"><label>@(i + 1)</label></td>
                                <td class="col-xs-3 col-sm-3" width="100"><input type="text" class="form-control" id="SplicerCable@(i + 1)" name="SplicerCable@(i + 1)"></td>
                                <td width="60"><input maxlength="5" type="text" class="form-control SplicerCable@(i + 1)" onkeyup="this.value=this.value.replace(/[^\d]/,'')" id="SplicerNoFibre@(i + 1)" name="SplicerNoFibre@(i + 1)" disabled></td>
                                <td><input type="checkbox" class="form-control SplicerCable@(i + 1)" id="SplicerPrepped@(i + 1)" name="SplicerPrepped@(i + 1)" disabled></td>
                                <td><input type="checkbox" class="form-control SplicerCable@(i + 1)" id="SplicerDeRebonized@(i + 1)" name="SplicerDeRebonized@(i + 1)" disabled></td>
                                <td><input type="checkbox" class="form-control SplicerCable@(i + 1)" id="SplicerRibbon@(i + 1)" name="SplicerRibbon@(i + 1)" disabled></td>
                                <td><input type="checkbox" class="form-control SplicerCable@(i + 1)" id="SplicerSingle@(i + 1)" name="SplicerSingle@(i + 1)" disabled></td>
                                <td><input type="checkbox" class="form-control SplicerCable@(i + 1)" id="SplicerMissing@(i + 1)" name="SplicerMissing@(i + 1)" disabled></td>
                            </tr>
            }
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label col-sm-5" for="time">Enter Time:</label>
                                <div class="col-sm-7">
                                    <input id="SplicerEnterTime" type="text" placeholder="02:00" class="form-control input-small">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/MultiSelectDropDown.js"></script>
<script src="~/Scripts/Myscript.js"></script>

